{% extends 'base.html.twig' %}

{% block title %}Log index{% endblock %}

{% block body %}
    <h1>Log index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Timestamp</th>
                <th>UserId</th>
                <th>Scene</th>
                <th>Message</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for log in logs %}
            <tr>
                <td>{{ log.id }}</td>
                <td>{{ log.timestamp ? log.timestamp|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ log.userId }}</td>
                <td>{{ log.scene }}</td>
                <td>{{ log.message }}</td>
                <td>
                    <a href="{{ path('log_show', {'id': log.id}) }}">show</a>
                    <a href="{{ path('log_edit', {'id': log.id}) }}">edit</a>
                    {{ include('log/_delete_form.html.twig') }}

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('log_new') }}">Create new</a>
    <p>

    <form method="post" action="{{ path('log_delete_all') }}" class="form-group col-xs-6">
        <input type="submit" class="btn btn-danger" onclick="return confirm('Hammer - Delete from basket: Are you sure?');" value="Delete ALL logs (DANGER)">
    </form>
    <p>

    <form method="get" action="{{ path('log_csv') }}" class="form-group col-xs-6">
        <input type="submit" class="btn btn-primary" value="Download as CSV">
    </form>
{% endblock %}
