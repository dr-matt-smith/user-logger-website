{% extends 'base.html.twig' %}

{% block title %}Log{% endblock %}

{% block body %}
    <h1>Log</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ log.id }}</td>
            </tr>
            <tr>
                <th>Timestamp</th>
                <td>{{ log.timestamp ? log.timestamp|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Participant</th>
                <td>{{ log.participant }}</td>
            </tr>
            <tr>
                <th>Scene</th>
                <td>{{ log.scene }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ log.message }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('log_index') }}">back to list</a>

    <a href="{{ path('log_edit', {'id': log.id}) }}">edit</a>

    {{ include('log/_delete_form.html.twig') }}
{% endblock %}
